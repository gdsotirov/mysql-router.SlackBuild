> function start_stop_daemon() {
>   local retval=0
>   # see http://man7.org/linux/man-pages/man8/start-stop-daemon.8.html
>   while [[ $# -gt 1 ]]; do
>     case "$1" in
>       # commands
>       -S|--start       ) START_STOP="start"    ;;
>       -K|--stop        ) START_STOP="stop"     ;;
>       # matching options
>       -p|--pidfile     ) PID_FILE="$2" ; shift ;;
>       -x|--exec        ) CMD_LINE="$2" ; shift ;;
>       -n|--name        ) PROC_NAME="$2"; shift ;; # not implemented
>       -u|--user        ) USER_NAME="$2"; shift ;; # not implemented
>       # generic options
>       -R=*|--retry=*   ) RTRY_CNT="${1#*=}";   ;; # not implemented
>       -t|--test        ) START_STOP="test"     ;;
>       -q|--quiet       ) FG_QUIET=1            ;;
>       -c|--chuid       ) USER_NAME="$2"; shift ;;
>       -b|--background  ) SH_BKG=1              ;;
>       -m|--make-pidfile) FG_MAKE_PID=1         ;;
>       --               ) shift; CMD_OPTS="$@"; break ;;
>       # ignore and report all other options as errors
>       *) echo "Error: Unregognized or unimplemented option: '$1'" ;;
>    esac
>    shift
>   done
> 
>   FG_QUIET=${FG_QUIET:-0}
>   SH_BKG=${SH_BKG:-1}           # always true
>   FG_MAKE_PID=${FG_MAKE_PID:-1} # always true
> 
>   if [ "$START_STOP" == "test" ]; then
>     if [ $FG_QUIET -ne 1 ]; then
>       echo "$CMD_LINE $CMD_OPTS"
>     fi
>     return 0
>   elif [ "$START_STOP" == "start" ]; then
>     if [ $FG_QUIET -ne 1 ]; then
>       echo -n " ($CMD_LINE $CMD_OPTS) "
>     fi
>     if [ "$USER_NAME" != "" ]; then
>       /bin/su -p -s /bin/sh $USER_NAME -c "$CMD_LINE $CMD_OPTS & echo \$! > $PID_FILE" >/dev/null 2>&1
>       sleep 1
>       kill -0 `cat $PID_FILE` >/dev/null 2>&1
>       retval=$?
>     else
>       $CMD_LINE $CMD_OPTS >/dev/null 2>&1 &
>       sleep 1
>       kill -0 $! >/dev/null 2>&1
>       retval=$?
>       if [ $retval -eq 0 ]; then
>         echo $! > $PID_FILE
>       fi
>     fi
>   elif [ "$START_STOP" == "stop" ]; then
>     if [ -e $PID_FILE ]; then
>       if [ $FG_QUIET != 1 ]; then
>         echo -n " (kill $(cat $PID_FILE)) "
>       fi
>       kill `cat $PID_FILE` >/dev/null 2>&1
>       retval=$?
>     else
>       killall $PROC_NAME >/dev/null 2>&1
>       retval=$?
>     fi
>     rm -f $PID_FILE
>   fi
> 
>   if [ $retval -ne 0 ]; then
>     retval=2
>   fi
> 
>   return $retval
> }
