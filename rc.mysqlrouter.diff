>   if [ -e $pidfile ]; then
>     if [ -r $pidfile ]; then
>       proc_pid=$(cat $pidfile)
>       /bin/kill -0 $proc_pid
>       status=$?
>     else
>       status="4"
>     fi
>   else
>     procs=$(pidof $name)
>     if [ "$procs" != "" ]; then
>       status="0"
>     else
>       status="1"
>     fi
>   fi
> 
